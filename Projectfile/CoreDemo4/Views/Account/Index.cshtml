
@model UserSingUpViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Oturum aç </h3>
        
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <h6 class="tittle">@ViewBag.UrlT </h6>
                    <div asp-validation-summary="ModelOnly">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Adınız</label>
                        <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="" required="" asp-for="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Soyadınız</label>
                        <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="" required="" asp-for="@Model.Surname">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2"> Kullanıcı adınız</label>
                        <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="" required="" asp-for="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E-posta adresiniz</label>
                        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="" required="" asp-for="@Model.Mail">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" placeholder="" required="" asp-for="@Model.Password">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2"> Tekrar şifre </label>
                        <input type="password" class="form-control" placeholder="" required="" asp-for="@Model.ConfirmPassword">
                    </div>

                    <button asp-controller="Account" asp-action="Index" type="submit" class="btn btn-primary submit mb-4">Kayıt ol</button>
                    <p><a asp-controller="Account" asp-action="Login">Giriş yap</a></p>

                </form>
            </div>
        </div>
    </div>
</section>

