
@model CoreDemo4.Models.AddWriterProfil
@{
    ViewData["Title"] = "AddWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form method="post" enctype="multipart/form-data" class="form-group">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil əlavə edin</h4>
                <p class="card-description"> Profil əlavə edin </p>
                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad soyad</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Fayl yükləyin</label>
                        <input  type="file" class="form-control file-upload-info"  placeholder="Şəkil yüklə" name="WriterIFormFile" @*accept="image/*"*@>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Textarea</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Yadda saxla</button>
                    <button class="btn btn-light">Bağla</button>
                </div>
            </div>
        </div>
    </div>
</form>


