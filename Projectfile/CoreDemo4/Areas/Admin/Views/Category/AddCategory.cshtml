@model EntityLayer.Concreate.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Admin2Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Yeni kateqoriya yarat</h5>
            <div class="ibox-tools">
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
            {
            <div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label class="col-lg-2 col-form-label">Ad</label>

                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryName)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label class="col-lg-2 col-form-label">Məlumat</label>

                        <div class="col-lg-10">
                            @Html.TextAreaFor(x => x.CategoryDescription, 10, 3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CategoryDescription)
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary submit mb-4">Daxil et</button>
                <a asp-action="Index" class="btn btn-warning read-m col-lg">Geri qayıt</a>
            </div>
            }
        </div>
    </div>
</div>

